<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.module.magnetic" name="[COLOR FFffd800]Magnetic[/COLOR] Torrent Manager" version="0.9.21"
       provider-name="mancuniancol">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>executable</provides>
    </extension>
    <extension point="kodi.context.item" library="contextitem.py">
        <item>
            <label>32010</label>
            <visible>StringCompare(ListItem.dbtype,movie) | StringCompare(ListItem.dbtype,tvshow) | StringCompare(ListItem.dbtype,season)|!String.IsEmpty(ListItem.OriginalTitle)|!String.IsEmpty(ListItem.IMDBNumber)|!String.IsEmpty(ListItem.TVShowTitle)|!String.IsEmpty(ListItem.Season)|!String.IsEmpty(ListItem.Episode)</visible>
        </item>
    </extension>
    <extension point="xbmc.service" library="service.py" start="startup"/>
    <extension point="xbmc.python.module" library="resources/lib"/>
    <extension point="xbmc.addon.metadata">
        <summary><![CDATA[Magnet service]]></summary>
        <platform>linux windows osx android</platform>
    </extension>
</addon>
